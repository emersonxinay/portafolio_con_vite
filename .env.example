# API Configuration
VITE_API_BASE_URL=http://localhost:5000/api
VITE_API_TIMEOUT=10000

# Environment
VITE_ENV=development

# Feature Flags
VITE_USE_MOCK_DATA=false
VITE_ENABLE_ANALYTICS=false

# EmailJS Configuration (for contact form)
# Get these from: https://dashboard.emailjs.com/
VITE_EMAILJS_SERVICE_ID=your_service_id_here
VITE_EMAILJS_TEMPLATE_ID=your_template_id_here
VITE_EMAILJS_PUBLIC_KEY=your_public_key_here

# Auto-reply template (optional - sends confirmation email to sender)
VITE_EMAILJS_AUTOREPLY_TEMPLATE_ID=your_autoreply_template_id_here

# Database (for reference - used in backend only)
# Flask: DATABASE_URL=postgresql://user:password@localhost:5432/portfolio_db
# Rails: DATABASE_URL=postgresql://user:password@localhost:5432/portfolio_db
# .NET: ConnectionStrings__DefaultConnection=Server=localhost;Database=portfolio_db;User Id=user;Password=password;
